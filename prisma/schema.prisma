// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Session {
  id            String    @id @db.VarChar(255)
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model section_inspiration {
  id        Int       @id @default(autoincrement())
  shop      String?
  title     String?
  imgSrc    String?
  createdAt DateTime? @default(now())
}

model faqs {
  id        Int       @id @default(autoincrement())
  question  String?
  answer    String?
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
}

model bundle {
  bundleId  Int       @id @default(autoincrement())
  title     String?
  price     Int?
  imgSrc    String?
  tags      String?   @db.LongText
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  section section[]
  charge  charge[]
}

model section {
  sectionId     Int       @id @default(autoincrement())
  title         String?
  badgeTone     String?
  badgeProgress String?
  price         Int?
  categoryId    Int?
  imgSrc        String?
  details       String?   @db.LongText
  tags          String?   @db.LongText
  bundleId      Int?
  store         String?
  status        Int       @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime? @updatedAt

  bundle bundle?  @relation(fields: [bundleId], references: [bundleId])
  charge charge[]
}

model category {
  categoryId   Int    @id @default(autoincrement())
  categoryName String
}

model inspiration_suggestions {
  id          Int       @id @default(autoincrement())
  shop        String
  name        String
  email       String
  description String    @db.LongText
  status      Int       @default(0)
  image       String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime? @updatedAt
}

model charge {
  id        Int        @id @default(autoincrement())
  shop      String
  chargeId  String
  type      ChargeType
  sectionId Int?
  bundleId  Int?

  section section? @relation(fields: [sectionId], references: [sectionId])
  bundle  bundle?  @relation(fields: [bundleId], references: [bundleId])
}

enum ChargeType {
  SECTION
  BUNDLE
}
